;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
;background = ${xrdb:color0:#222}
background = #d8000000
foreground = #dfdfdf
primary = #00ff54
secondary = #e60053
alert = #bd2c40

[bar/top]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 15
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = ${colors.primary}

border-size = 1
border-color = ${colors.background}

padding-left = 0
padding-right = 0

module-margin-left = 1
module-margin-right = 1

font-1 = FontAwesome:pixelsize=8;0
font-0 = Ninbus Sans L:fontformat=truetype:size=8:antialias=false;0

modules-left = i3
modules-center = xwindow gmusic
modules-right = cpu temperature filesystem wlan battery volume date

tray-position = right
tray-padding = 5

[module/xwindow]
type = internal/xwindow
format-underline = ${colors.primary}
label = %title:0:75:...%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted =  %percentage_used%%
label-unmounted =  not mounted
label-mounted-underline = ${colors.primary}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

label-mode-padding = 1
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %name%
label-focused-background = ${colors.background}
label-focused-underline = ${colors.primary}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %name%
label-visible-background = $colors.background}
label-visible-underline = ${colors.primary}
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %name%
label-urgent-underline = ${colors.alert}
label-urgent-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-underline = ${colors.primary}
label = %percentage%%

[module/wlan]
type = internal/network
interface = wlp1s0
interval = 3.0

format-connected = <label-connected>
format-connected-underline = ${colors.primary}
label-connected =  %essid% %signal%% %local_ip%

format-disconnected =
format-disconnected-underline = ${colors.alert}
label-disconnected =  disconnected

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %a, %b %d %Y"

time =  %I:%M %p

format-underline = ${colors.primary}

label = %date% %time%

[module/volume]
type = internal/volume

label-volume = " %percentage%%"
label-volume-foreground = ${root.foreground}
label-volume-underline = ${colors.primary}
label-muted =  0%
label-muted-underline = ${colors.primary}

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 105

format-charging = <animation-charging> <label-charging>
format-charging-underline = ${colors.primary}
label-charging =  %percentage%% %time%

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${colors.primary}
label-discharging =  %percentage%% %time%

format-full-prefix = " "
format-full-underline = ${colors.primary}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
; Framerate in milliseconds
animation-charging-framerate = 750

time-format = %H:%M

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <label>
format-prefix = " "
format-underline = ${colors.primary}
format-warn = <label-warn>
format-warn-underline = ${colors.alert}

label = "%temperature%"
label-warn = %temperature%
label-warn-foreground = ${colors.alert}

[settings]
screenchange-reload = true

[module/gmusic]
type = custom/script
interval = 5
exec = awk -f ~/.config/polybar/gmusic.awk
label = "%output:0:75:...%"
format-underline = ${colors.primary}

[global/wm]
margin-top = 0
margin-bottom = 0
